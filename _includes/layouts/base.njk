<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">
	{% include "components/head.njk" %}
	<body>
		<header>
			{% image "static/img/me.jpg", "Jeremy Karlsson", "128" %}
			<em>
				<a href="{{ '/' | url }}">{{ metadata.title }}</a>
			</em>
			<div class="box">
				<lastfm-status></lastfm-status>
			</div>
			{% include "components/nav.njk" %}
		</header>
		<main>
			{{ layoutContent | safe }}
		</main>
		{% include "components/footer.njk" %}
		<svg>
			<filter id='noiseFilter'>
				<feTurbulence
					type='fractalNoise'
					baseFrequency='6.29'
					numOctaves='6'
					stitchTiles='stitch'/>
			</filter>
		</svg>
		<script async src="https://ga.jspm.io/npm:es-module-shims@1.6.3/dist/es-module-shims.js"></script>
		<script type="importmap">
		{
			"imports": {
				"webact": "https://cdn.jsdelivr.net/npm/webact"
			}
        }
		</script>
		<script type="module" src="/static/js/inline.js"></script>
	</body>
</html>
