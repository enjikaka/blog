<section>
	<h2>Reading</h2>
	<div class="books-list">
	{% for book in bookslist | bookFilter('reading') %}
		<kb-book isbn="{{ book.data.isbn }}"></kb-book>
	{% endfor %}
	</div>
	<h2>To read</h2>
	<div class="books-list">
	{% for book in bookslist | bookFilter('to read') %}
		<kb-book isbn="{{ book.data.isbn }}"></kb-book>
	{% endfor %}
	</div>
	<h2>Read</h2>
	<div class="books-list">
	{% for book in bookslist | bookFilter('read') %}
		<kb-book isbn="{{ book.data.isbn }}"></kb-book>
	{% endfor %}
	</div>
</section>
